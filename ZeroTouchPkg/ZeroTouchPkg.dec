[Defines]
  DEC_SPECIFICATION              = 0x00010005
  PACKAGE_NAME                   = ZeroTouchPkg
  PACKAGE_UNI_FILE               = ZeroTouchPkg.uni
  PACKAGE_GUID                   = 80061278-f44e-45b5-be81-1acc13362a7e
